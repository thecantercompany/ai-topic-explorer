generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Analysis {
  id        String   @id @default(cuid())
  topic     String
  result    Json
  createdAt DateTime @default(now())
}

model ErrorLog {
  id        String   @id @default(cuid())
  category  String
  provider  String?
  message   String
  rawError  String?
  topic     String?
  ip        String?
  metadata  Json?
  createdAt DateTime @default(now())

  @@index([createdAt])
  @@index([category])
  @@index([provider])
}
